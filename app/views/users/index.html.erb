<% title t(".title") %>

<table>
  <tr>
    <th><%= t('label.login') %></th>
    <th colspan="3"></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%= link_to t('link.show'), user %></td>
    <td><%= link_to t('link.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('link.destroy'), user, :confirm => t('confirm.destroy'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('link.new_user'), new_user_path %>
