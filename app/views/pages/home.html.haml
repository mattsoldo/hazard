        %li= link_to "App menu item", "#"
        %li= link_to "App menu item", "#"
        %li= link_to "App menu item", "#"
    - admin_only do
    - form_tag impersonate_users_path do
      = select_tag "id", options_for_select(User.all.collect{ |u| [u.display_name, u.id] })
      = submit_tag 'Impersonate'
  #main_with_left_menu
